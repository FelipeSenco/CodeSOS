@model List<CodeSOSProject.ViewModels.QuestionViewModel>

@{
    ViewBag.Title = "Search";
}

<div class="row">
    <div class="col-sm-12">
        <h3>Search results for <span class="text-info">@ViewBag.str</span></h3>
        <table class="table">
            @if (Model.Count() != 0)
            {
                foreach (var item in Model)
                {
                    Html.RenderPartial("QuestionRow", item);
                }
            }
            else
            {
                <tr><td><h5>No results found</h5></td></tr>
            }
        </table>        
    </div>
</div>
