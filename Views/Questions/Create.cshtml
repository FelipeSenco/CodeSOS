@model CodeSOSProject.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Create Question</h1>
        <form class=".needs-validation" novalidate="novalidate" action="/questions/create" method="post">

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="fomr-group col-sm-12">
                    <label for="txtQuestionName">Question</label>
                    <textarea class="form-control" id="txtQuestionName" placeholder="Enter question" name="QuestionName" required autofocus pattern="^[a-zA-Z ]*$"></textarea>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Please enter a question</div>
                </div>
            </div>

            <div class="row">
                <div class="fomr-group col-sm-6">
                    <label for="dropCategory">Question</label>
                    <select class="form-control" id="dropCategory" name="CategoryID" required>
                        <option value="">Please Select</option>
                        @foreach (var item in ViewBag.categories)
                            {
                                <option value="@item.CategoryID">@item.CategoryName</option>
                            }
                    </select>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Choose a category</div>
                </div>
            </div>

            <button class="btn btn-primary mt-4" type="submit">Add Question</button>
            @Html.ValidationSummary()
        </form>
    </div>
</div>


<script>
    
    $(document).on("submit", ".needs-validation", validate);

    $(".needs-validation textarea").blur(validate);

    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }

        $(".needs-validation")[0].classList.add("was-validated");
    }

</script>
