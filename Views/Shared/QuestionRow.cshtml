@model CodeSOSProject.ViewModels.QuestionViewModel

@{ var item = Model;}
<tr>
    <td><span class="badge bg-secondary">@item.VotesCount</span> Votes</td>
    <td><span class="badge bg-secondary">@item.AnswersCount</span> Answers</td>
    <td><span class="badge bg-secondary">@item.ViewsCount</span> Views</td>
    <td class="text-dark">
        <a href="/questions/viewquestion?questionID=@item.QuestionID" class="text-primary">@item.QuestionName</a>
        <br>
        <span class="badge bg-info">@item.Category.CategoryName</span>
    </td>
    <td>
        @if (Convert.ToInt32(Session["CurrentUserID"]) != item.UserID)
        {
            @:by @item.User.Name
        }
        else
        {
            @:by you
        }
    </td>
    <td>@item.QuestionDateAndTime</td>
</tr>